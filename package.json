{
  "name": "readerfront-api",
  "version": "0.2.0",
  "description": "A Graphql Backend for ReaderFront, written in Node.JS",
  "author": "dvaJi",
  "keywords": [
    "graphql",
    "node.js",
    "manga"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dvaJi/ReaderFront-API/issues"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "prettier": "pretty-quick --staged",
    "setup": "yarn setup:install && yarn setup:db",
    "setup:install": "yarn install",
    "setup:db": "yarn db:migrate && yarn db:seed",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:seed": "./node_modules/.bin/sequelize db:seed:all",
    "start": "cross-env NODE_ENV=development nodemon src/index.js --exec babel-node",
    "start:prod": "cross-env NODE_ENV=production yarn build:prod && yarn start:server",
    "build:prod": "babel src -s -D -d build",
    "start:server": "cross-env NODE_ENV=production node build/index.js",
    "release": "standard-version",
    "test": "jest"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0",
    "sequelize-test-utils": "^0.3.0",
    "standard-version": "^4.4.0"
  },
  "dependencies": {
    "archiver": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "date-fns": "^1.30.1",
    "dotenv": "^6.2.0",
    "express": "^5.0.0-alpha.7",
    "express-graphql": "^0.7.1",
    "feed": "^2.0.2",
    "fs-extra": "^7.0.1",
    "graphql": "^14.0.2",
    "graphql-date": "^1.0.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tools": "^4.0.3",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "mysql2": "^1.6.4",
    "nodemailer": "^5.1.1",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "sharp": "^0.21.2",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn prettier"
    }
  }
}
